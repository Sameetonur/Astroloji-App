@model HoroscopeGroupUpdateDto

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <h6 class="display-6 fs-3 text-primary mb-4">Burç Grubu Güncelleme</h6>
        <form asp-area="Admin" asp-controller="HoroscopeGroup" asp-action="Update" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Grup Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HoroscopeNames" class="form-label">Burç İsimleri</label>
                <input asp-for="HoroscopeNames" class="form-control" />
                <span asp-validation-for="HoroscopeNames" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Image" class="form-label">Resim</label>
                <input type="file" name="imageFile" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" class="mt-2" style="max-width: 200px;" />
                }
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </form>
    </div>
</div>
