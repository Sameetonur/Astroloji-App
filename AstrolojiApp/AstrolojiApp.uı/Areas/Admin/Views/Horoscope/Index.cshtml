@model IEnumerable<HoroscopeDto>

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Burçlar</h6>
            <a asp-area="Admin" asp-controller="Horoscope" asp-action="Add" class="btn btn-primary">Yeni Ekle</a>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(item.Image))
                                {
                                    <img src="@item.Image" class="card-img" alt="@item.Name">
                                }
                            </div>
                            <div class="col-md-6">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text">@item.DateRange</p>
                                    <div class="d-flex justify-content-end mt-3">
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm ms-2">Sil</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card-img {
        height: 250px;
        width: 100%;
        object-fit: cover;
        object-position: center;
    }
    .card {
        box-shadow: 0 0.15rem 1.75rem 0 rgb(34 39 46 / 15%);
    }
    .card-body {
        padding: 1.5rem;
    }
</style>
