@model HoroscopeUpdateDto

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <h6 class="display-6 fs-3 text-primary mb-4">Burç Güncelleme</h6>
        <form asp-area="Admin" asp-controller="Horoscope" asp-action="Update" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Burç Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateRange" class="form-label">Tarih Aralığı</label>
                        <input asp-for="DateRange" class="form-control" />
                        <span asp-validation-for="DateRange" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Image" class="form-label">Resim</label>
                        <input type="file" name="imageFile" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="text-center mb-3">
                            <img src="@Model.Image" class="img-fluid rounded" style="max-height: 300px;" />
                        </div>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </form>
    </div>
</div>
