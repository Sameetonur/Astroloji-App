@model HoroscopeCommentUpdateDto

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <h6 class="display-6 fs-3 text-primary mb-4">Burç Yorumu Güncelleme</h6>
        <form asp-area="Admin" asp-controller="HoroscopeComment" asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="HoroscopeId" />
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Burç Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Daily" class="form-label">Günlük Yorum</label>
                <textarea asp-for="Daily" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Daily" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Monthly" class="form-label">Aylık Yorum</label>
                <textarea asp-for="Monthly" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Monthly" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Annual" class="form-label">Yıllık Yorum</label>
                <textarea asp-for="Annual" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Annual" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </form>
    </div>
</div>






















