@using AstrolojiApp.Shared.Dtos
@model IEnumerable<AstrologCommentDto>

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Astrolog Yorumları</h6>
            <a asp-area="Admin" asp-controller="AstrologComment" asp-action="Add" class="btn btn-primary">Yeni Ekle</a>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@item.Image" class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Text</p>
                            <div class="d-flex justify-content-between mt-3">
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card-img-top {
        height: 250px;
        object-fit: cover;
    }
    .card {
        box-shadow: 0 0.15rem 1.75rem 0 rgb(34 39 46 / 15%);
    }
</style>
